<UserControl x:Class="Hangman.WPF.Views.TournamentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:Hangman.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TournamentViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="Button" x:Key="KeyboardButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Command"
                    Value="{Binding DataContext.GuessCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <Setter Property="CommandParameter" Value="{Binding}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="20" Visibility="{Binding IsTournamentInProgress, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Player1.Name}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock FontSize="16">
                        <Run Text="{Binding Strings.TournamentHeaderLives}"/>
                        <Run Text="{Binding Player1.Lives}" FontWeight="Bold" Foreground="Crimson"/>
                        <Run Text=" | "/>
                        <Run Text="{Binding Strings.TournamentHeaderWins}"/>
                        <Run Text="{Binding Player1.Wins}" FontWeight="Bold" Foreground="Green"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Player2.Name}" FontSize="18" FontWeight="Bold" TextAlignment="Right"/>
                    <TextBlock FontSize="16" TextAlignment="Right">
                        <Run Text="{Binding Strings.TournamentHeaderWins}"/>
                        <Run Text="{Binding Player2.Wins}" FontWeight="Bold" Foreground="Green"/>
                        <Run Text=" | "/>
                        <Run Text="{Binding Strings.TournamentHeaderLives}"/>
                        <Run Text="{Binding Player2.Lives}" FontWeight="Bold" Foreground="Crimson"/>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <TextBlock Grid.Row="1" Text="{Binding TimerText}"
                       FontSize="20" FontWeight="Bold" Foreground="Crimson" HorizontalAlignment="Right"/>

            <TextBlock Grid.Row="1"
                       FontSize="20" FontWeight="Bold" Foreground="Blue" HorizontalAlignment="Left">
                <Run Text="{Binding ActivePlayerText}"/>
                <Run Text=": "/>
                <Run Text="{Binding CurrentGuesserName}"/>
            </TextBlock>

            <Image Grid.Row="2" Source="{Binding GallowsImageSource}" Height="180" Margin="0,10"
                   Visibility="{Binding IsRoundInProgress, Converter={StaticResource BoolToVis}}"
                   Stretch="Uniform"/>

            <TextBlock Grid.Row="3"
                       Text="{Binding CreakAnimationText}"
                       HorizontalAlignment="Center"
                       FontSize="14"
                       Foreground="DarkGray"
                       FontStyle="Italic"
                       FontFamily="Courier New"
                       Visibility="{Binding IsRoundInProgress, Converter={StaticResource BoolToVis}}"/>

            <TextBlock Grid.Row="4" Text="{Binding MaskedWord}" FontSize="48" FontFamily="Courier New"
                       Visibility="{Binding IsRoundInProgress, Converter={StaticResource BoolToVis}}"
                       FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="5" Text="{Binding UsedLetters}" FontSize="16" Foreground="Gray"
                       Visibility="{Binding IsRoundInProgress, Converter={StaticResource BoolToVis}}"
                       HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <ItemsControl Grid.Row="6" ItemsSource="{Binding KeyboardLetters}"
                          Visibility="{Binding IsRoundInProgress, Converter={StaticResource BoolToVis}}"
                          VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="3" Columns="10" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" Style="{StaticResource KeyboardButton}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Row="4" Grid.RowSpan="3" VerticalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsRoundInProgress}" Value="False" />
                                    <Condition Binding="{Binding IsTournamentInProgress}" Value="True" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="{Binding TournamentStatusMessage}" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" />

                <Button Content="{Binding Strings.TournamentButtonNextRound}" Command="{Binding NextRoundCommand}" 
                        HorizontalAlignment="Center" Padding="10" Margin="0,20,0,0" FontSize="16"/>
            </StackPanel>

            <Button Grid.Row="7" Content="{Binding Strings.TournamentButtonCancel}"
                    Command="{Binding BackToMenuCommand}"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Margin="0,15" Padding="5" Background="LightGray"/>
            <Button Content="{Binding Strings.ButtonBackToMenu}"
                    Command="{Binding BackToMenuCommand}"
                    Padding="10" FontSize="16" Margin="570,20,10,9" Grid.Row="7"/>

        </Grid>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsTournamentInProgress, ConverterParameter=True, Converter={StaticResource BoolToVis}}">

            <TextBlock Text="{Binding TournamentEndMessage}"
                       FontSize="22" FontWeight="Bold" TextWrapping="Wrap"
                       HorizontalAlignment="Center" TextAlignment="Center" MinWidth="300"/>
        </StackPanel>
    </Grid>
</UserControl>