<UserControl x:Class="Hangman.WPF.Views.AddWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">

        <TextBlock Text="{Binding Strings.AddWordTitle}" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="{Binding Strings.AddWordPrompt}" Margin="0,10,0,0"/>
        <TextBox Text="{Binding NewWord, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Padding="5" FontSize="16"/>

        <TextBlock Text="{Binding Strings.AddWordLabelLanguage}" Margin="0,10,0,0"/>
        <ComboBox ItemsSource="{Binding Languages}" 
                  SelectedItem="{Binding SelectedLanguage}" Margin="0,5" Padding="5" FontSize="16"/>

        <Button Content="{Binding Strings.AddWordButtonSave}" Command="{Binding AddWordCommand}" Margin="0,20" Padding="10" FontWeight="Bold" FontSize="16"/>

        <TextBlock Text="{Binding FeedbackMessage}" FontSize="14" Foreground="Green" TextWrapping="Wrap" MinHeight="40"/>

        <Button Content="{Binding Strings.ButtonBackToMenu}" Command="{Binding BackToMenuCommand}" HorizontalAlignment="Center" Margin="0,20" Padding="10"/>

    </StackPanel>
</UserControl>