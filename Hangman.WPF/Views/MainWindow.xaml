<Window x:Class="Hangman.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:views="clr-namespace:Hangman.WPF.Views"
        xmlns:viewmodels="clr-namespace:Hangman.WPF.ViewModels"
        
        mc:Ignorable="d"
        Title="WPF Hangman" Height="650" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MenuViewModel}">
            <views:MenuView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GameViewModel}">
            <views:GameView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:HighscoreViewModel}">
            <views:HighscoreView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddWordViewModel}">
            <views:AddWordView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:HelpViewModel}">
            <views:HelpView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TournamentViewModel}">
            <views:TournamentView />
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}" />

</Window>