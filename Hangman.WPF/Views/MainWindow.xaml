<Window x:Class="Hangman.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman.WPF.Views"
        xmlns:viewmodels="clr-namespace:Hangman.WPF.ViewModels"
        mc:Ignorable="d"
        Title="WPF Hangman" Height="300" Width="400"
        Loaded="MainWindow_Loaded">
    <Window.DataContext>
        <viewmodels:GameViewModel/>
    </Window.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="{Binding MaskedWord}"
                   FontSize="32" 
                   FontFamily="Courier New"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding UsedLetters}"
                   FontSize="16"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <TextBox x:Name="GuessTextBox" 
                 MaxLength="1" 
                 Width="50" 
                 FontSize="18"
                 HorizontalAlignment="Center"/>

        <Button Content="Gissa" 
                Width="100" 
                Margin="10"
                Click="GuessButton_Click"/>
    </StackPanel>
</Window>