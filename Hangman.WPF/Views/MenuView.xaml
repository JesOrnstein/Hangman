<UserControl x:Class="Hangman.WPF.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
        <TextBlock Text="WPF HANGMAN" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Spelarnamn:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding CurrentSettings.PlayerName}" Margin="0,5" Padding="5"/>

        <TextBlock Text="Svårighetsgrad:" Margin="0,10,0,0"/>
        <ComboBox ItemsSource="{Binding Difficulties}" 
                  SelectedItem="{Binding CurrentSettings.Difficulty}" Margin="0,5" Padding="5"/>

        <TextBlock Text="Ordlista:" Margin="0,10,0,0"/>
        <ComboBox ItemsSource="{Binding WordSources}" 
                  SelectedItem="{Binding CurrentSettings.Source}" Margin="0,5" Padding="5"/>

        <Button Content="Spela (Enspelare)" Command="{Binding StartSinglePlayerCommand}" Margin="0,20,0,0" Padding="10" FontWeight="Bold"/>
        <Button Content="Visa Highscores" Command="{Binding NavigateToHighscoresCommand}" Margin="0,10" Padding="5"/>
        <Button Content="Lägg till Ord" Command="{Binding NavigateToAddWordCommand}" Margin="0,0,0,10" Padding="5"/>

    </StackPanel>
</UserControl>