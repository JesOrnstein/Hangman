<UserControl x:Class="Hangman.WPF.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="500" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
        <TextBlock Text="WPF HANGMAN" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Button Content="{Binding Strings.MenuPlaySingle}" Command="{Binding StartSinglePlayerCommand}" Margin="0,20,0,0" Padding="10" FontWeight="Bold" FontSize="16"/>
        <Button Content="{Binding Strings.MenuPlayTournament}" Command="{Binding StartTournamentCommand}" Margin="0,5,0,0" Padding="10" FontWeight="Bold" FontSize="16"/>
        <Button Content="{Binding Strings.MenuShowHighscores}" Command="{Binding NavigateToHighscoresCommand}" Margin="0,20" Padding="5"/>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{Binding Strings.MenuAddWord}" Command="{Binding NavigateToAddWordCommand}" Margin="0,0,5,0" Padding="5"/>
            <Button Grid.Column="1" Content="{Binding Strings.MenuHelp}" Command="{Binding NavigateToHelpCommand}" Margin="5,0,0,0" Padding="5"/>
        </Grid>

    </StackPanel>
</UserControl>